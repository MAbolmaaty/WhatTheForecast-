<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/txt_day"
        style="@style/text_black_21_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16"
        android:fontFamily="@font/roboto_bold"
        android:includeFontPadding="false"
        android:textSize="@dimen/txt_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Tue" />

    <TextView
        android:id="@+id/txt_min_temp"
        style="@style/text_black_21_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:includeFontPadding="false"
        android:textSize="@dimen/txt_16"
        app:layout_constraintStart_toEndOf="@id/txt_day"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ic_condition"
        tools:text="20°" />

    <ImageView
        android:id="@+id/ic_condition"
        android:layout_width="@dimen/dimen_32"
        android:layout_height="@dimen/dimen_32"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/txt_day"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txt_max_temp"
        style="@style/text_black_21_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:includeFontPadding="false"
        android:textSize="@dimen/txt_16"
        app:layout_constraintStart_toEndOf="@id/ic_condition"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="20°" />

</androidx.constraintlayout.widget.ConstraintLayout>