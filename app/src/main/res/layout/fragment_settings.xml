<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:clickable="true"
    style="@style/background_white_f6_black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.settings.SettingsFragment">

    <androidx.appcompat.widget.AppCompatToggleButton
        android:id="@+id/btn_mode"
        style="@style/button_style_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/dimen_24" />

    <TextView
        android:id="@+id/dark_mode"
        style="@style/text_black_21_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_24"
        tools:text="Dark mode"
        android:fontFamily="@font/roboto_bold"
        android:includeFontPadding="false"
        android:textSize="@dimen/txt_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_mode"
        app:layout_constraintBottom_toBottomOf="@id/btn_mode"/>

</androidx.constraintlayout.widget.ConstraintLayout>